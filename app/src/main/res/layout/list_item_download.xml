<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/app_padding_default">

    <ImageView
        android:id="@+id/download_file_type_imageview"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="@dimen/app_padding_default"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/download_file_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="CatPic.jpg"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/download_file_url_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CatPic.jpg"
            android:maxLines="1"
            android:textColor="@android:color/secondary_text_dark" />

        <ProgressBar
            android:id="@+id/download_file_progress_bar"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:indeterminate="true"
            android:visibility="gone" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/download_control_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/app_padding_default"
        android:background="?android:attr/selectableItemBackground"
        android:src="@mipmap/ic_launcher" />

</LinearLayout>